<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="good.force.teah.makeawish.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_margin="20dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/title_stab">
        <WebView
            android:id="@+id/webview_main"
            android:layout_width="match_parent"
            android:layout_height="320dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/app_name"/>
        </FrameLayout>
        <Button
            android:id="@+id/button_donate"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/button_login"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="Donate" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="150dp"
            android:layout_height="52dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/title_stab"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:text="Login/Signup" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
