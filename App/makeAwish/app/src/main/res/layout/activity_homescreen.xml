<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="good.force.teah.makeawish.homescreen">

    <TextView

        android:id="@+id/wlcomeText"
        android:layout_width="153dp"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:text="Welcome"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="italic"

        />

    <LinearLayout
        android:id="@+id/button_profile"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/wlcomeText"
        android:layout_margin="10dp"
        android:background="#eee"
        android:elevation="3dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:background="@drawable/ic_person_black_24dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="View Profile"
            android:textSize="25sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_add_refferal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/button_profile"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:background="#eee"
        android:elevation="3dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:background="@drawable/ic_add_circle_outline_black_24dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="Add a new Refferal"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_view_refferal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/button_add_refferal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#eee"
        android:elevation="3dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:background="@drawable/ic_view_list_black_24dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="View Referrals"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_faq"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/button_view_refferal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#eee"
        android:elevation="3dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:background="@drawable/ic_search_black_24dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="Search for Wishes"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_calender"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/button_faq"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#eee"
        android:elevation="3dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:background="@drawable/ic_monetization_on_black_24dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="Donation"
            android:textSize="25sp" />
    </LinearLayout>


</RelativeLayout>
